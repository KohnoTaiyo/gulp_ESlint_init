{
  "extends": "eslint:recommended",
  "plugins": [],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {},
  "parserOptions": {
    "ecmaVersion": 2015
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "no-undef": "warn",
    "no-console": "off",
    "quotes": [
      "warn",
      "single"
    ],
    "space-before-blocks": [
      "warn",
      {
        "functions": "always"
      }
    ]
  }
}